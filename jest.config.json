{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
  "moduleNameMapper": {
    "\\.(css|scss)$": "<rootDir>/src/test/mocks/identity-obj-proxy-esm.js",
    "\\.svg$": "<rootDir>/src/test/mocks/svgMock.js"
  },
  "transform": {
    "^.+\\.(ts|tsx)?$": "ts-jest",
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "testPathIgnorePatterns": ["/dist/"]
}
